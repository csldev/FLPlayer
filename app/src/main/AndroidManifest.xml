<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.compassl.anji.flsts">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>


    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/flsts"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.compassl.anji.flsts.FirstActivity"
            android:launchMode="standard"
            android:theme="@style/Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.compassl.anji.flsts.MusicActivity"
            android:launchMode="singleTask"
            android:theme="@style/Transparent"/>

        <service
            android:name="com.compassl.anji.flsts.service.UpdateBackgroundPic"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name="com.compassl.anji.flsts.EarReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.compassl.anji.flsts.service.DownloadMusic"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.compassl.anji.flsts.service.NewSongListeningService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.compassl.anji.flsts.service.MusicPlayService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="MUSIC_PLAYING_SERVICE"/>
            </intent-filter>
        </service>
    </application>

</manifest>